<odoo>

    <record id="view_qr_ticket_form" model="ir.ui.view">
        <field name="name">custom.qr.ticket.form</field>
        <field name="model">custom.qr.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket QR">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="user_id" />
                        <field name="department" />
                        <field name="date_created" readonly="1" />
                        <field name="token" readonly="1" />
                    </group>
                    <group>
                        <field name="qr_url_display" widget="url" readonly="1" />
                        <field name="qr_image" widget="image" class="oe_avatar" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_qr_ticket_tree" model="ir.ui.view">
        <field name="name">custom.qr.ticket.tree</field>
        <field name="model">custom.qr.ticket</field>
        <field name="arch" type="xml">
            <tree string="Ticket QR">
                <field name="name" />
                <field name="user_id" />
                <field name="department" />
                <field name="token" />
                <field name="date_created" />
            </tree>
        </field>
    </record>

    <record id="action_qr_ticket" model="ir.actions.act_window">
        <field name="name">Ticket QR</field>
        <field name="res_model">custom.qr.ticket</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_qr_root" name="Custom QR" sequence="10" />
    <menuitem id="menu_qr_ticket" name="Ticket QR" parent="menu_qr_root" action="action_qr_ticket" />

    <record id="sequence_custom_qr_ticket" model="ir.sequence">
        <field name="name">Ticket QR Sequence</field>
        <field name="code">ticket.sequence</field>
        <field name="prefix">AK</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False" />
    </record>

</odoo>