<odoo>
    <data>
        <record id="view_queue_counter_kanban_custom" model="ir.ui.view">
            <field name="name">queue.counter.kanban.custom</field>
            <field name="model">counter.counter</field> 
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="state"/> <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    
                                    <div class="mt-2">
                                        <field name="state" widget="badge" 
                                               decoration-success="state == 'in_progress'" 
                                               decoration-warning="state == 'unused'"/>
                                    </div>

                                    <div class="mt-3">
                                        <button name="action_start_processing" type="object"
                                                class="btn btn-primary"
                                                attrs="{'invisible': [('state', '!=', 'unused')]}">
                                            Avvia Sessione
                                        </button>
                                        <button name="action_close_session" type="object"
                                                class="btn btn-danger"
                                                attrs="{'invisible': [('state', '!=', 'in_progress')]}">
                                            Chiudi Sessione
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_counter_interface" model="ir.actions.act_window">
            <field name="name">Interfaccia Sportello</field>
            <field name="res_model">counter.counter</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_queue_counter_kanban_custom"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Crea un nuovo sportello per iniziare.
              </p>
            </field>
        </record>

        <menuitem id="menu_counter_interface"
                  name="Interfaccia Sportello"
                  parent="customer_queue.menu_queue_root"
                  action="action_counter_interface"
                  sequence="10"/>
    </data>
</odoo>